{
  "name": "houdoku",
  "productName": "Houdoku",
  "description": "Manga reader and library manager for the desktop",
  "version": "2.14.0",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "lint": "biome lint src",
    "package": "pnpm build && pnpm electron-builder --publish onTagOrDraft --win --mac --linux"
  },
  "build": {
    "productName": "Houdoku",
    "appId": "com.faltro.Houdoku",
    "files": [
      "out/**/*"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "extraResources": [
      "./assets/**"
    ],
    "publish": {
      "provider": "github",
      "owner": "xgi",
      "repo": "houdoku"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xgi/houdoku"
  },
  "author": {
    "name": "xgi",
    "email": "xgi@faltro.com",
    "url": "https://faltro.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xgi/houdoku/issues"
  },
  "keywords": [
    "manga",
    "manga-reader",
    "comics",
    "electron",
    "react",
    "typescript",
    "ts"
  ],
  "homepage": "https://houdoku.org",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tiyo/common": "1.0.0",
    "@types/discord-rpc": "^4.0.0",
    "@types/enzyme": "^3.10.10",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/history": "4.7.9",
    "@types/jsdom": "^20.0.0",
    "@types/mousetrap": "^1.6.8",
    "@types/node": "17.0.25",
    "@types/node-fetch": "^2.5.12",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^18.0.6",
    "@types/react-router-dom": "^5.3.3",
    "@types/rimraf": "^3.0.2",
    "@types/semver": "^7.3.9",
    "@types/uuid": "^8.3.3",
    "browserslist-config-erb": "^0.0.3",
    "core-js": "^3.20.0",
    "discord-rpc": "^4.0.1",
    "electron": "^32.1.2",
    "electron-builder": "^24.6.4",
    "electron-vite": "^2.2.0",
    "formdata-node": "^4.3.1",
    "pkce-challenge": "^2.2.0",
    "rimraf": "^3.0.2",
    "semver": "^7.5.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-node-polyfills": "^0.21.0"
  },
  "dependencies": {
    "@mantine/core": "^7.9.0",
    "@mantine/hooks": "^7.9.0",
    "@mantine/modals": "^7.9.0",
    "@mantine/notifications": "^7.9.0",
    "@radix-ui/react-context-menu": "^2.1.5",
    "@tabler/icons": "^1.92.0",
    "aki-plugin-manager": "^1.3.3",
    "bufferutil": "^4.0.8",
    "electron-debug": "^3.1.0",
    "electron-log": "^4.4.3",
    "electron-updater": "^4.6.1",
    "form-data": "4.0.1",
    "history": "^5.2.0",
    "html-react-parser": "^5.0.6",
    "jsdom": "^20.0.0",
    "jszip": "^3.8.0",
    "mousetrap": "^1.6.5",
    "node-fetch": "^2.6.7",
    "node-unrar-js": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.1",
    "recoil": "^0.7.4",
    "regenerator-runtime": "^0.13.5",
    "source-map-support": "^0.5.21",
    "utf-8-validate": "^6.0.3",
    "uuid": "^8.3.2"
  }
}